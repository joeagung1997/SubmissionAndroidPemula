<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetilItemFoodActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_detil_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_burger"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/image_detil_photo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:layout_marginRight="0dp">


        <TextView
            android:id="@+id/tv_detil_tempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/blackSolid"
            tools:text="Bintaro XChange"/>
        <TextView
            android:id="@+id/textview_detil_desc"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/blackSolid"
            android:layout_height="wrap_content"
            tools:text="Cepat Saji"/>

        <TextView
            android:id="@+id/textview_detil_jarak"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:textColor="@color/blackSolid"
            android:layout_height="wrap_content"
            android:gravity="center"

            tools:text="200. KM"/>

    </LinearLayout>





</RelativeLayout>